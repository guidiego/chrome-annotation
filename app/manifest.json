{
  "manifest_version" : 2,
  "name"             : "ChromeAnnotation",
  "version"          : "1.0",

  "description"      : "Give you the possibility to annotate and print something on the screen",
  "background"       : {
    "scripts" : ["app.js"]
  },
  "icons"            : {
    "16"  : "assets/img/GB-19.png",
    "48"  : "assets/img/GB-48.png",
    "128" : "assets/img/GB-128.png"
  },

  "browser_action"      : {
    "default_icon" : {
      "16"  : "assets/img/GB-19.png",
      "48"  : "assets/img/GB-48.png"
    }
  },

  "content_scripts" : [{
    "matches" : ["http://*/*", "https://*/*"],
    "js": ["vendors/Sketchpad.js"],
    "css": ["assets/css/master.css"],
    "run_at": "document_end"
  }],

  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*", "webNavigation"]
}
